<h1>All Products</h1>

<% @products.each do |product| %>
  <ul>
    <li><p><%= product.name %></p></li>
    <li><p><%= product.description %></p></li>
    <li><p><%= product.formatted_price %></p></li>
  </ul>
  <p>See reviews about <%= link_to "#{product.name}", product_path(product) %>
  </p><br>
<% end %>